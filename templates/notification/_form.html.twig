{{ form_start(form) }}

{% for flash_message in app.flashes('success') %}
    <div class="alert alert-success">{{ flash_message }}</div>
{% endfor %}

{% for flash_message in app.flashes('error') %}
    <div class="alert alert-danger">{{ flash_message }}</div>
{% endfor %}

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-bell"></i></span>
        </div>
        {{ form_widget(form.message, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez un message'}}) }}
    </div>
    {{ form_errors(form.message, {'attr': {'class': 'invalid-feedback'}}) }}
</div>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
        </div>
        {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
    </div>
</div>


<button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}
