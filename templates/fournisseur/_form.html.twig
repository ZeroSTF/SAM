{{ form_start(form) }}

{% for flash_message in app.flashes('success') %}
    <div class="alert alert-success">{{ flash_message }}</div>
{% endfor %}

{% for flash_message in app.flashes('error') %}
    <div class="alert alert-danger">{{ flash_message }}</div>
{% endfor %}

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-building"></i></span>
        </div>
        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez un nom'}}) }}
    </div>
    {{ form_errors(form.nom, {'attr': {'class': 'invalid-feedback'}}) }}
</div>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-phone"></i></span>
        </div>
        {{ form_widget(form.numTel, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez un numero de téléphone'}}) }}
    </div>
    {{ form_errors(form.numTel, {'attr': {'class': 'invalid-feedback'}}) }}
</div>

<button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}
