{{ form_start(form) }}

{% for flash_message in app.flashes('success') %}
    <div class="alert alert-success">{{ flash_message }}</div>
{% endfor %}

{% for flash_message in app.flashes('error') %}
    <div class="alert alert-danger">{{ flash_message }}</div>
{% endfor %}

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-comment"></i></span>
        </div>
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez une description'}}) }}
    </div>
    {{ form_errors(form.description, {'attr': {'class': 'invalid-feedback'}}) }}
</div>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-clock"></i></span>
        </div>
        {{ form_widget(form.iT, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez un indicateur temporel (en jours)'}}) }}
    </div>
    {{ form_errors(form.iT, {'attr': {'class': 'invalid-feedback'}}) }}
</div>

<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="fas fa-road"></i></span>
        </div>
        {{ form_widget(form.iKm, {'attr': {'class': 'form-control', 'placeholder': 'Saisissez un indicateur en Km'}}) }}
    </div>
    {{ form_errors(form.iKm, {'attr': {'class': 'invalid-feedback'}}) }}
</div>

<button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}</button>

{{ form_end(form) }}
